{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/Fastly.ts"
  ],
  "exclude": [
    "node_modules/*",
    "src/config/*",
    "src/index.js",
    "test/*"
  ]
}
